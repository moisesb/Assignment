<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/activity_login"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="net.moisesborges.conferencetracker.login.LoginActivity">

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/password_hint"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_text"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:hint="@string/email_hint"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        app:layout_constraintTop_toTopOf="@+id/activity_login"/>

    <Button
        android:id="@+id/login_doctor_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Doctor"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        app:layout_constraintVertical_bias="0.2"/>

    <Button
        android:id="@+id/login_admin_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Admin"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login"
        app:layout_constraintRight_toRightOf="@+id/activity_login"
        app:layout_constraintTop_toBottomOf="@+id/login_doctor_button"
        app:layout_constraintVertical_bias="0.13"/>

</android.support.constraint.ConstraintLayout>
